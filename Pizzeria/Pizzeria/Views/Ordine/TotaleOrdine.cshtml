@model Pizzeria.ViewModels.TotaleOrdineViewModel

@{
    ViewData["Title"] = "Totale Ordine";
    var totale = ViewData["Totale"] as decimal? ?? 0m; // Assumendo che il totale sia di tipo decimal
}

<h2>Totale Ordine</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome Articolo</th>
            <th>Quantità</th>
            <th>Prezzo</th>
            <th>Totale</th>
            <th>Azione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ordine.Items)
        {
            <tr>
                <td>@item.Articoli.Nome</td>
                <td>@item.Quantita</td>
               
                <td>
                    <form asp-action="AggiornaQuantita" method="post">
                        <input type="hidden" name="ordineId" value="@Model.Ordine.Id" />
                        <input type="hidden" name="articoloId" value="@item.Articoli.Id" />
                        <input type="number" name="quantita" value="@item.Quantita" min="1" />
                        <button type="submit" class="btn btn-primary">Aggiorna</button>
                    </form>
                </td>
                <td>@item.Articoli.PrezzoVendita</td>
                <td>@(item.Articoli.PrezzoVendita * item.Quantita)</td>
                <td>
                    <form asp-action="RimuoviArticolo" method="post">
    <input type="hidden" name="ordineId" value="@Model.Ordine.Id" />
    <input type="hidden" name="articoloId" value="@item.Articoli.Id" />
    <button type="submit" class="btn btn-danger">Rimuovi</button>
</form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Totale Ordine: @Model.Totale</h3>



<form asp-action="AggiornaOrdine" method="post">
    <div class="form-group">
        <label for="Indirizzo">Indirizzo:</label>
        <input type="text" class="form-control" id="Indirizzo" name="Indirizzo" value="@Model.Indirizzo" required />
    </div>
    <div class="form-group">
        <label for="Note">Note:</label>
        <textarea class="form-control" id="Note" name="Note">@Model.Note</textarea>
    </div>
    <input type="hidden" name="ordineId" value="@Model.Ordine.Id" />
    <button type="submit" class="btn btn-primary">Aggiorna Ordine</button>
</form>