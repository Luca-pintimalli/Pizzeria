@model Pizzeria.Models.Articolo

    <a asp-controller="Ingrediente" asp-action="NuovoIngrediente" class="btn btn-info">Nuovo ingrediente</a>
    <a asp-controller="Ingrediente" asp-action="Ingredienti" class="btn btn-info">Lista ingredienti</a>



<h1>Crea una Pizza!</h1>

<form asp-action="NuovoArticolo" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="fotoFile" class="control-label">Foto</label>
        <input type="file" id="fotoFile" name="fotoFile" class="form-control" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrezzoVendita" class="control-label"></label>
        <input asp-for="PrezzoVendita" class="form-control" />
        <span asp-validation-for="PrezzoVendita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoDiConsegna" class="control-label"></label>
        <input asp-for="TempoDiConsegna" class="form-control" />
        <span asp-validation-for="TempoDiConsegna" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Ingredienti</label>
        <div>
            @foreach (var ingrediente in ViewBag.Ingredienti as List<Pizzeria.Models.Ingrediente>)
            {
                <div>
                    <input type="checkbox" name="selectedIngredienti" value="@ingrediente.Id" />
                    <label>@ingrediente.Nome</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>