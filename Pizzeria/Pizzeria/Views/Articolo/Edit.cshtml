@model Pizzeria.Models.Articolo

@{
    Layout = "_Layout";
}

<h1>Modifica Articolo</h1>
@Html.AntiForgeryToken()
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />
 
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="fotoFile" class="control-label">Foto</label>
        <input type="file" id="fotoFile" name="fotoFile" class="form-control" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrezzoVendita" class="control-label"></label>
        <input asp-for="PrezzoVendita" class="form-control" />
        <span asp-validation-for="PrezzoVendita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoDiConsegna" class="control-label"></label>
        <input asp-for="TempoDiConsegna" class="form-control" />
        <span asp-validation-for="TempoDiConsegna" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Ingredienti</label>
        <select asp-for="Ingredienti" class="form-control" multiple="multiple" asp-items="@(new SelectList(ViewBag.Ingredienti, "Id", "Nome"))"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
</form>

