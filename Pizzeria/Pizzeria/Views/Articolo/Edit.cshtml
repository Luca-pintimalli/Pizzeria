@model Pizzeria.Models.FileUpload

@{
    Layout = "_Layout";
}

<h1>Modifica Articolo</h1>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="UploadFile" class="control-label">Foto</label>
        <input type="file" id="UploadFile" name="UploadFile" class="form-control" />
        <span asp-validation-for="UploadFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrezzoVendita" class="control-label"></label>
        <input asp-for="PrezzoVendita" class="form-control" />
        <span asp-validation-for="PrezzoVendita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoDiConsegna" class="control-label"></label>
        <input asp-for="TempoDiConsegna" class="form-control" />
        <span asp-validation-for="TempoDiConsegna" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Ingredienti</label>
        <div>
            @foreach (var ingrediente in ViewBag.Ingredienti as List<Pizzeria.Models.Ingrediente>)
            {
                <div>
                    <input type="checkbox" name="selectedIngredienti" value="@ingrediente.Id"
                           @(Model.Id != 0 && ViewBag.IngredientiSelezionati != null && ViewBag.IngredientiSelezionati.Contains(ingrediente.Id) ? "checked" : "") />
                    <label>@ingrediente.Nome</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
</form>